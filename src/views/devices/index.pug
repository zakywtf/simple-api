extends ../layouts/base

block content
	.container
		br
		//- br
		.card
			.card-body
				h5.card-title.fw-semibold.mb-4 Daftar Mesin Pirolisis
				p.mb-0 Berikut daftar mesin pirolisis yang sudah terdaftar
				br
				.filter-container
					//- label(for="categoryFilter") Filter Kategori:
					br
					a.button.btn.btn-primary.btn-round.ml-auto(title='', data-original-title="Tambah Sekolah", data-toggle='modal', href='', data-target='#create')
						i.fa.fa-plus
						| 
						| Tambah Mesin Pirolisis
				br
				.table-responsive
					table#basic-datatables.display.table.table-bordered.table-hover
						thead.thead-light
							tr
								th No
								th ID Mesin
								th Nama Mesin
								th Penempatan
								th Kondisi
								th Keterangan
								th Aksi

						tbody
							-var no = 1;
							each data in datas
								tr
									td #{no++}
									td 
										b ##{data.device_id}
									td #{data.name}
									td #{data.partner_id.npsn} - #{data.partner_id.name}
									td.border-bottom-0
										.d-flex.align-items-center.gap-2
										if (data.condition == 'good')
											span.badge.bg-success.rounded-3.fw-semibold Baik
										else if (data.condition == 'broken')
											span.badge.bg-danger.rounded-3.fw-semibold Rusak
										else 
											span.badge.bg-warning.rounded-3.fw-semibold Perbaikan
									td #{data.notes}
									td
										button.btn.btn-outline-primary.dropdown-toggle(data-toggle="dropdown", href="#", aria-expanded="false")
											| Aksi
										ul.dropdown-menu
											li
												a.dropdown-item(title='', data-original-title="Edit Mesin", data-toggle='modal', href='', data-target='#edit'+data._id) Edit
												
											li 
												a.dropdown-item(title='', data-original-title="Delete Mesin", data-toggle='modal', href='', data-target='#delete'+data._id) Delete
							
							
					nav
						ul(style="justify-content: center;")#pagination.pagination

	.modal.fade(id='create',tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
		.modal-dialog(style="width: 800px;")
			.modal-content
				.modal-header
					h2
						b Tambah Mesin
					//- button.close(type="button", data-dismiss="modal")
					//- 	span(aria-hidden="true")
					//- 		i.ti.ti-square-x
					//- 	span.sr-only close
				.modal-body
					form#data-form.form-validation
						.form-group.row
							label.col-sm-4.form-control-label(for="device_id") ID Mesin
								span.text-danger *
							.col-sm-8
								input#device_id.form-control(type="text", required, placeholder="ID Mesin", name="device_id")
						br
						.form-group.row
							label.col-sm-4.form-control-label(for="name") Nama Mesin
								span.text-danger *
							.col-sm-8
								input#name.form-control(type="text", placeholder="Nama Mesin", required, name="name")
						br
						.form-group.row
							label.col-sm-4.form-control-label(for="hori-pass1") Penempatan
								span.text-danger *
							.col-sm-8
								select#partner_id.form-control(name="partner_id", required="required")
									each partner in partners
										option(value=partner._id) #{partner.npsn} - #{partner.name}
						br
						.form-group.row
							label.col-sm-4.form-control-label(for="name") Keterangan
								span.text-danger *
							.col-sm-8
								textarea#notes.form-control(row="3", placeholder="Keterangan", required, name="notes")
						br
						.form-group.row
							.col-sm-12.col-sm-offset-4
								button.btn.btn-primary.waves-effect.waves-light.float-right(type="submit", style="float: right;")
									| Submit

	each data in datas 
		.modal.fade(id='edit'+data._id, tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
			.modal-dialog(style="width: 800px;")
				.modal-content
					.modal-header
						h2
							b Edit Mesin
						//- button.close(type="button", data-dismiss="modal")
						//- 	span(aria-hidden="true")
						//- 		i.ti.ti-square-x
						//- 	span.sr-only close
					.modal-body
						form#edit-form.form-validation(action='/devices/update/'+data._id, method='post')
							.form-group.row
								label.col-sm-4.form-control-label(for="device_id") ID Mesin
									span.text-danger *
								.col-sm-8
									input#_id.form-control(type="hidden", name="_id", value=data._id)
									input#device_id.form-control(type="text", required, placeholder="ID Mesin", name="device_id", value=data.device_id)
							br
							.form-group.row
								label.col-sm-4.form-control-label(for="name") Nama Mesin
									span.text-danger *
								.col-sm-8
									input#name.form-control(type="text", placeholder="Nama Mesin", required, name="name", value=data.name)
							br
							.form-group.row
								label.col-sm-4.form-control-label(for="hori-pass1") Penempatan
									span.text-danger *
								.col-sm-8
									select#partner_id.form-control(name="partner_id", required="required")
										each partner in partners
											option(value=partner._id, selected=(data.partner_id.name==partner.name)?'yes':undefined) #{partner.npsn} - #{partner.name}
							br
							.form-group.row
								label.col-sm-4.form-control-label(for="condition") Kondisi
									span.text-danger *
								.col-sm-8
									select#condition.form-control(name="condition", required="required")
										option(value='') -- Pilih Kondisi --
										option(value="good", selected=(data.condition=='good')?'yes':undefined) Baik
										option(value="broken", selected=(data.condition=='broken')?'yes':undefined ) Rusak
										option(value="maintenance", selected=(data.condition=='maintenance')?'yes':undefined ) Perbaikan
							br
							.form-group.row
								label.col-sm-4.form-control-label(for="name") Keterangan
									span.text-danger *
								.col-sm-8
									textarea#notes.form-control(row="3", placeholder="Keterangan", required, name="notes") #{data.notes}
							br
							.form-group.row
								.col-sm-12.col-sm-offset-4
									button.btn.btn-primary.waves-effect.waves-light.float-right(type="submit", style="float: right;")
										| Submit

	// pop up delete data
	each data in datas
		.modal.fade(id='delete'+data._id ,tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
			.modal-dialog
				.modal-content
					.modal-header
						h4#myModalLabel.modal-title Peringatan!
					.modal-body
						h5 Apakah anda yakin untuk menghapus data #{data.name} ?
					.modal-footer
						a.btn.btn-danger#tambah(type='button', href='devices/delete/'+data._id) Ya
						button.btn.btn-primary(type='button', data-dismiss='modal') Tidak
				// /.modal-content
			// /.modal-dialog
		// /.modal


	script(src="https://code.jquery.com/jquery-3.6.0.min.js")
	script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js")
	//- script(src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js")

	script.
		$(document).ready(function() {
			var table = $('#basic-datatables').DataTable({
				"paging": true,
				"searching": true,
				"info": false,
				"ordering": true,
				"lengthMenu": [10, 25, 50, 100],
				"deferRender": true,
				"scroller": true,
			});
			$('#categoryFilter').on('change', function () {
				var selectedCategory = $(this).val();
				console.log({selectedCategory})
				table.column(11).search(selectedCategory).draw(); // Filter berdasarkan kolom kategori (index ke-2)
			});
			$('.dataTables_length').html(`
				<label>Show
					<select id="customEntries" class="custom-entries">
						<option value="10" selected>10</option>
						<option value="25">25</option>
						<option value="50">50</option>
						<option value="100">100</option>
					</select> entries
				</label>
			`);

			// Event listener untuk dropdown custom
			$('#customEntries').on('change', function() {
				var value = $(this).val();
				table.page.len(value).draw();
			});
			//- $('.dataTables_length').clone().appendTo('.custom-footer').show();
			
		});

	script.
		document.getElementById('data-form').addEventListener('submit', function(event) {
			event.preventDefault();
			var host = window.location.origin;
			const token = localStorage.getItem('token');
			const formData = new FormData(this);
			const data = Object.fromEntries(formData);

			// Option 1: Using fetch API
			fetch(host + '/api/v1/devices', {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json',
					'Authorization': `Bearer ${token}`
				},
				body: JSON.stringify(data)
			})
			.then(response => {
				console.log({response})
				if (!response.ok) {
					throw new Error('Network response was not ok');
				}
				//- return response.json(); 
				window.location.href = host+'/devices'

			})
			.then(data => {
				console.log('Success:', data);
			})
			.catch(error => {
				console.error('Error:', error);
			});
		});
