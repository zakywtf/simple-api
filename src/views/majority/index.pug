extends ../layouts/base

block content
	.container
		br
		//- br
		.card
			.card-body
				.row 
					.col-lg-9 
						h5.card-title.fw-semibold.mb-4 List Kelas dan Jurusan
						p.mb-0 Berikut list kelas dan jurusan
					.col-lg-3
						a.button.btn.btn-primary.btn-round.ml-auto(title='', data-original-title="Tambah Kelas dan Jurusan", data-toggle='modal', href='', data-target='#create')
							i.fa.fa-plus
							| 
							| Tambah Kelas dan Jurusan
				br
				.table-responsive
					table#dataTable.table.table-bordered
						thead.thead-light
							tr
								th No
								th Kelas
								th Jurusan
								th Kapasitas Siswa
								th Keterangan
								th Aksi

						tbody
							-var no = 1;
							each data in datas
								tr
									td #{no++}
									td 
										b #{data.class}
									td #{data.name}
									td #{data.capacity}
									td #{data.notes}
									td
										button.btn.btn-outline-primary.dropdown-toggle(data-toggle="dropdown", href="#", aria-expanded="false")
											| Aksi
										ul.dropdown-menu
											li
												a.dropdown-item(title='', data-original-title="Edit Mesin", data-toggle='modal', href='', data-target='#edit'+data._id) Edit
												
											li 
												a.dropdown-item(title='', data-original-title="Delete Mesin", data-toggle='modal', href='', data-target='#delete'+data._id) Delete
						

					nav
						ul(style="justify-content: center;")#pagination.pagination

