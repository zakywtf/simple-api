										option(value="7", selected=(data.class=='7')?'yes':undefined) 7
										option(value="8", selected=(data.class=='8')?'yes':undefined) 8
										option(value="9", selected=(data.class=='9')?'yes':undefined) 9
										option(value="10", selected=(data.class=='10')?'yes':undefined) 10
										option(value="11", selected=(data.class=='11')?'yes':undefined) 11
										option(value="12", selected=(data.class=='12')?'yes':undefined) 12

