									option(value="8") 8
									option(value="9") 9
									option(value="10") 10
									option(value="11") 11
									option(value="12") 12

						br
						.form-group.row
							label.col-sm-4.form-control-label(for="name") Nama Jurusan
								span.text-danger *
							.col-sm-8
								input#name.form-control(type="text", placeholder="Nama Jurusan", required, name="name")
						br
						.form-group.row
							label.col-sm-4.form-control-label(for="name") Kapasitas Siswa
								span.text-danger *
							.col-sm-8
								input#name.form-control(type="number", placeholder="Kapasitas Siswa", required, name="capacity")
						br
						.form-group.row
							label.col-sm-4.form-control-label(for="name") Keterangan
								span.text-danger *
							.col-sm-8
								textarea#notes.form-control(row="3", placeholder="Keterangan", required, name="notes")
						br
						.form-group.row
							.col-sm-12.col-sm-offset-4
								button.btn.btn-primary.waves-effect.waves-light.float-right(type="submit", style="float: right;")
