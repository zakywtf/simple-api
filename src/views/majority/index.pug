							.form-group.row
								label.col-sm-4.form-control-label(for="name") Nama Jurusan
									span.text-danger *
								.col-sm-8
									input#name.form-control(type="text", placeholder="Nama Jurusan", required, name="name", value=data.name)
							br
							.form-group.row
								label.col-sm-4.form-control-label(for="name") Kapasitas Siswa
									span.text-danger *
								.col-sm-8
									input#name.form-control(type="number", placeholder="Kapasitas Siswa", required, name="capacity", value=data.capacity)
							br
							.form-group.row
								label.col-sm-4.form-control-label(for="name") Keterangan
									span.text-danger *
								.col-sm-8
									textarea#notes.form-control(row="3", placeholder="Keterangan", required, name="notes") #{data.notes}
							br
							.form-group.row
								.col-sm-12.col-sm-offset-4
									button.btn.btn-primary.waves-effect.waves-light.float-right(type="submit", style="float: right;")
										| Submit
	// pop up delete data
	each data in datas
		.modal.fade(id='delete'+data._id ,tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
			.modal-dialog
				.modal-content
					.modal-header
						h4#myModalLabel.modal-title Peringatan!
					.modal-body
						h5 Apakah anda yakin untuk menghapus data #{data.class} - #{data.name} ?
					.modal-footer
						a.btn.btn-danger#tambah(type='button', href='devices/delete/'+data._id) Ya
						button.btn.btn-primary(type='button', data-dismiss='modal') Tidak
