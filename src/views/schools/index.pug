block content
	.container-fluid
		br
		//- br
		.card
			.card-body
				.row 
					.col-lg-10 
						h5.card-title.fw-semibold.mb-4 List Sekolah
						p.mb-0 Berikut list sekolah yang terdaftar
					.col-lg-2
						a.button.btn.btn-primary.btn-round.ml-auto(title='', data-original-title="Tambah Mesin", data-toggle='modal', href='', data-target='#create')
							i.fa.fa-plus
							| 
							| Tambah Sekolah
				br
				.table-responsive
					table#dataTable.table.table-bordered
